{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "jsx": "react"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "lib"]
}
